<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

  </head>
  <body>
    <div class="container">
      <header>
        <nav class="navbar navbar-dark bg-secondary mt-4">
          <a class="navbar-brand" href="/">Express-loginAppEjs</a>
          <% if(!user){ %>
            <a class="btn btn-primary my-2 my-sm-0" href="/login">Login</a>  
          <% }else{ %>
            <a class="btn btn-primary my-2 my-sm-0" href="/logout">Logout</a>  
          <% } %>
        </nav>

      </header>
      <main>
        <div class="grid">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col" class="align-middle text-center">No</th>
                        <th scope="col" class="align-middle">やること</th>
                        <th scope="col" class="align-middle text-center">未/済</th>
                        <th scope="col" class="align-middle">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% var count = 1; %>
                    <% todo.forEach(element => { %>
                    <tr>
                        <td class="align-middle text-center"><%= count %></td>
                        <td class="align-middle"><%= element.todo %></td>
                        <td class="align-middle text-center"  id=<%= element.seq %>>
                          <% if(element.done){ %>
                            <i class="fa fa-check-square-o btn-success" aria-hidden="true">
                          <% }else{ %>
                            <i class="fa fa-square-o" aria-hidden="true">
                          <% } %>
                        </td>
                        <td class="form-inline">
                          <% if(element.done){ %>
                            <button id=<%= element.seq %> name="check" type="submit" class="btn btn-secondary mr-2">未チェックへ戻す <i class="fa fa-check" aria-hidden="true"></i></button>
                          <% }else{ %>
                            <button id=<%= element.seq %> name="check" type="submit" class="btn btn-success mr-2">チェック <i class="fa fa-check" aria-hidden="true"></i></button>
                          <% } %>
                            <a href="/TodoList/Update/<%= element.seq %>" class="btn btn-primary mr-2">修正 <i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                            <form class="mr-2" action="/TodoList/delete/<%= element.id %>" method="post">
                              <button id=<%= count %> name="delete" type="submit" class="btn btn-danger">削除 <i class="fa fa-trash" aria-hidden="true"></i></button>
                            </form>
                        </td>
                    </tr>
                    <% count += 1; %>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <a class="btn btn-info" href="/TodoList/Create">追加 <i class="fa fa-pencil" aria-hidden="true"></i></a>  
      </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <script src="/javascripts/todo.js"> </script>    
  </body>
</html>
